{
  "name": "bun-react-csr-base",
  "description": "Client side rendering react app tooled with bun",
  "version": "0.0.1",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "build": "rm -rf build && bun build ./src/index.tsx --outdir ./build --minify --splitting",
    "dev": "bun run build && cp -r public/ build && bun index.ts --watch",
    "prod": "bun index.ts --watch"
  },
  "keywords": [
    "bun.sh",
    "bun",
    "react",
    "csr"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react-dom": "^18.2.19"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.1"
  }
}
